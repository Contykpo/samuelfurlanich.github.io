@inject NavigationManager NavManager
@inject IJSRuntime JS

<g class="island" @onclick="NavigateToSection">
    <!-- SVG paths and elements for the island -->
</g>

@code
{
    [Parameter] public string SectionUrl { get; set; }

    private void NavigateToSection()
    {
        // Navigate to the specific section of your portfolio
        NavManager.NavigateTo(SectionUrl);
    }
    
    private async Task AnimateIsland()
    {
        await JS.InvokeVoidAsync("animateIsland", "island-id");
    }

    private async Task OnIslandClick()
    {
        await JS.InvokeVoidAsync("handleIslandClick", "island-id");
    }
}